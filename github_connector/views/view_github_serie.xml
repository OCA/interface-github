<odoo>

    <record id="view_github_serie_search" model="ir.ui.view">
        <field name="model">github.serie</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="view_github_serie_tree" model="ir.ui.view">
        <field name="model">github.serie</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_github_serie_form" model="ir.ui.view">
        <field name="model">github.serie</field>
        <field name="arch" type="xml">
            <form>
                <header/>
                <sheet>
                    <div class="oe_button_box" name="button_box" />
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                        <group>
                            <field name="sequence"/>
                            <field name="type"/>
                        </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
