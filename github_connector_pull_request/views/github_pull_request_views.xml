<odoo>
    <record id="github_pull_request_view_tree" model="ir.ui.view">
        <field name="name">GitHub Pull Request tree view</field>
        <field name="model">github.pull_request</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="repository_id" />
                <field name="user" />
                <field name="github_url" widget="url" />
                <field name="head_url" widget="url" optional="hide" />
                <field name="title" />
            </tree>
        </field>
    </record>

    <record id="github_pull_request_view_form" model="ir.ui.view">
        <field name="name">GitHub Pull Request form view</field>
        <field name="model">github.pull_request</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="repository_id" />
                        <field name="user" />
                        <field name="base_url" widget="url" />
                        <field name="head_url" widget="url" />
                        <field name="title" />
                        <field name="description" />
                    </group>
                    <notebook>
                        <page name="github" string="Github">
                            <group col="4">
                                <field name="github_url" widget="url" colspan="4" />
                                <field name="github_id_external" />
                                <field name="github_name" />
                                <field name="github_create_date" />
                                <field name="github_write_date" />
                                <field name="github_last_sync_date" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="github_pull_request_view_search" model="ir.ui.view">
        <field name="name">GitHub Pull Request search view</field>
        <field name="model">github.pull_request</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="title" />
                <field name="user" />
                <field name="repository_id" context="{'search_default_group_by': 1}" />
            </search>
        </field>
    </record>

    <record id="github_pull_request_action" model="ir.actions.act_window">
        <field name="name">Pull Requests</field>
        <field name="res_model">github.pull_request</field>
    </record>

    <menuitem
        id="github_connector.menu_github_repository_pull_request"
        parent="github_connector.menu_github_repository_root"
        action="github_pull_request_action"
    />
</odoo>
