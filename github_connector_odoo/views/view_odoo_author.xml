<odoo>

    <record id="view_odoo_author_search" model="ir.ui.view">
        <field name="model">odoo.author</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="view_odoo_author_tree" model="ir.ui.view">
        <field name="model">odoo.author</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="module_qty"/>
            </tree>
        </field>
    </record>

    <record id="view_oca_author_form" model="ir.ui.view">
        <field name="model">odoo.author</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <div class="oe_clear"/>
                    <notebook>
                        <page string="Modules Information">
                            <group col="4">
                                <field name="module_qty"/>
                                <newline />
                                <field name="module_ids" colspan="4" nolabel="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>




