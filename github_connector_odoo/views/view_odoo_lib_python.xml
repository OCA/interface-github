<odoo>

    <record id="view_odoo_lib_python_search" model="ir.ui.view">
        <field name="model">odoo.lib.python</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="view_odoo_lib_python_tree" model="ir.ui.view">
        <field name="model">odoo.lib.python</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="module_version_qty" sum="Total"/>
            </tree>
        </field>
    </record>

    <record id="view_odoo_lib_python_form" model="ir.ui.view">
        <field name="model">odoo.lib.python</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="action"
                                name="%(action_odoo_module_version)d"
                                class="oe_stat_button" icon="fa-cube"
                                attrs="{'invisible': [('module_version_qty', '=', False)]}"
                                context="{'search_default_license_id': active_id}">
                            <field name="module_version_qty" string="Mod. Versions" widget="statinfo" />
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <notebook />
                </sheet>
            </form>
        </field>
    </record>

</odoo>
